                <DataTemplate x:DataType="vm:DupeViewModel">
                    <Grid Height="150" Width="150">
                        <Image Source="{x:Bind ImageUri, Mode=OneWay, Converter={StaticResource UriImageConverter}}" />
                        <TextBlock Text="{x:Bind Name}" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>--><!--
    </Grid>-->
</Page>
